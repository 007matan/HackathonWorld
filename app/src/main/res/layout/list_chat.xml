<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0088FF">

        <androidx.cardview.widget.CardView
            android:id="@+id/id_user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="40dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_img_chat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingTop="10dp"
                android:src="@drawable/img_avatar_itachi"
                android:scaleType="centerCrop"
                android:background="#042e6a"/>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/id_txt_chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/id_user_avatar"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="*chat name*">

        </com.google.android.material.textview.MaterialTextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/id_usere_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:layout_toEndOf="@id/id_txt_chat_name"
            app:cardCornerRadius="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_btn_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6FDAB9"
            android:text="press to chat">

        </androidx.appcompat.widget.AppCompatButton>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/id_txt_chat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/id_user_avatar"
            android:layout_below="@id/id_txt_chat_name"
            android:text="*last massage*">

        </com.google.android.material.textview.MaterialTextView>





    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>