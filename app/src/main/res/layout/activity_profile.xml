<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img_homepage_back"></androidx.appcompat.widget.AppCompatImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/id_user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="85dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/id_imgvw_profile_avatar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:paddingTop="10dp"
        android:src="@drawable/img_avatar_itachi"
        android:scaleType="centerCrop"
        android:background="#03af6f"/>

    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/id_btn_edit_avatar_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_user_avatar"
        android:layout_marginStart="100dp"
        android:src="@drawable/ic_edit">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/id_tf_invisible_input_imgurl"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_above="@+id/id_profile_main_ll">

    </com.google.android.material.textfield.TextInputEditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_btn_confirm_imgurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@+id/id_tf_invisible_input_imgurl"
        android:text="confirm"
        android:layout_centerHorizontal="true">

    </androidx.appcompat.widget.AppCompatButton>

    <LinearLayout
        android:id="@+id/id_profile_main_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/id_user_avatar"
        android:background="#DDD5"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:layout_weight="1">

            </androidx.appcompat.widget.AppCompatTextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/id_tf_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="*Name*"
                android:layout_weight="3">

            </com.google.android.material.textfield.TextInputEditText>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:layout_weight="1">

            </androidx.appcompat.widget.AppCompatTextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/id_tf_profile_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="*Status*"
                android:layout_weight="3">

            </com.google.android.material.textfield.TextInputEditText>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Phone number: "
                android:layout_weight="1">

            </androidx.appcompat.widget.AppCompatTextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/id_tf_profile_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*number*"
                android:focusable="false"
                android:layout_weight="3">

            </com.google.android.material.textfield.TextInputEditText>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:layout_weight="1">

            </androidx.appcompat.widget.AppCompatTextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/id_tf_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="*address*"
                android:layout_weight="3">

            </com.google.android.material.textfield.TextInputEditText>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Rule: "
                android:layout_weight="1">

            </androidx.appcompat.widget.AppCompatTextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/id_tf_profile_Rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="*rule*"
                android:layout_weight="3">

            </com.google.android.material.textfield.TextInputEditText>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_tv_invisible_userid"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="*userId*"
                android:visibility="invisible"
                android:layout_weight="1">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/id_btn_confirmEdit"
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_plus"
                android:visibility="invisible"
                android:layout_weight="2"
                android:background="@null">

            </androidx.appcompat.widget.AppCompatImageButton>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/id_btn_edit_profile"
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_edit"
                android:layout_weight="1"
                android:background="@null">

            </androidx.appcompat.widget.AppCompatImageButton>



        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/id_btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_profile_main_ll"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_home">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>