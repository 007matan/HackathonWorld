<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_gradient_splash">



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_IMG_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_logo"/>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/splash_PRG_download"
        android:progressBackgroundTint="#0048FF"
        android:progressTint="#37FF00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/teal_200"
        android:foregroundTint="#37FF00"
        android:layout_below="@+id/splash_IMG_logo"
        android:visibility="invisible"
        android:padding="56sp"/>


</RelativeLayout>